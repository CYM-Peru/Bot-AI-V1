{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "outDir": "./dist/server",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.d.ts",
    "src/runtime/**/*.ts",
    "src/api/**/*.ts",
    "src/flow/**/*.ts",
    "src/data/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "server/__tests__"
  ]
}
