# Server Configuration
PORT=3000
NODE_ENV=development

# WhatsApp Cloud API Configuration
# Get these values from Meta Business Suite
WSP_BASE_URL=https://graph.facebook.com
WSP_TOKEN=your_whatsapp_access_token_here
META_VERIFY_TOKEN=your_verify_token_here
META_WABA_TOKEN=your_waba_token_here
META_WABA_VERIFY_TOKEN=your_verify_token_here

# WhatsApp App Configuration
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WHATSAPP_VERIFY_TOKEN=your_verify_token_here
WHATSAPP_API_VERSION=v20.0
WHATSAPP_APP_SECRET=your_app_secret_here

# Bitrix24 Integration
# Create an app at: Bitrix24 → Settings → Developers → Applications
B24_APP_ID=
B24_APP_SECRET=
B24_PORTAL_BASE=https://your-company.bitrix24.es
B24_REDIRECT_URL=https://your-domain.com/api/bitrix/oauth/callback
B24_SCOPE=crm,user,im,imopenlines,placement,bizproc,task,lists,disk

# Bitrix24 OAuth (alternative configuration)
BITRIX_CLIENT_ID=
BITRIX_CLIENT_SECRET=
BITRIX_REDIRECT_URI=https://your-domain.com/api/bitrix/oauth/callback

# JWT Authentication
# Generate a secure secret with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Encryption
# Generate with: openssl rand -base64 32
ENCRYPTION_SECRET=your-encryption-secret-here

# CORS Configuration
CORS_ORIGIN=https://your-domain.com
CRM_WS_ALLOWED_ORIGINS=https://your-domain.com

# AI Configuration (optional)
# Choose one or more AI providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
OLLAMA_BASE_URL=http://localhost:11434

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=flowbuilder_crm
POSTGRES_USER=whatsapp_user
POSTGRES_PASSWORD=your_secure_password_here

# Storage Modes
# Options: "postgres", "json", "memory"
CRM_STORAGE_MODE=postgres
CAMPAIGNS_STORAGE_MODE=postgres
METRICS_STORAGE_MODE=postgres
SESSIONS_STORAGE_MODE=postgres

# Vite Frontend Configuration
VITE_USE_FLOW_API=true
VITE_FLOW_API_BASE_URL=/api

# Logging
LOG_LEVEL=info

# Webhook Configuration
WEBHOOK_TIMEOUT_MS=10000
